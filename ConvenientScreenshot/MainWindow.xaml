<Window x:Class="ConvenientScreenshot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvenientScreenshot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="541*"/>
        </Grid.ColumnDefinitions>

        <Canvas Grid.ColumnSpan="2" Margin="90,10,10,10" Background="#FFF1F1F1">
            <Image x:Name="imgPreview" HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="692" Grid.ColumnSpan="2"/>
        </Canvas>
        <Button x:Name="btnScreenshot" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnScreenshot_Click"/>

    </Grid>

</Window>
